<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8" />
        <title>{% block title %}Welcome!{% endblock %}</title>
        {% block stylesheets %}
            {% stylesheets output="css/app.css"
                "%kernel.root_dir%/Resources/assets/css/*"
             %}
                <link rel="stylesheet" href="{{ asset_url }}" type="text/css" />
            {% endstylesheets %}
        {% endblock %}
        <link rel="icon" type="image/x-icon" href="{{ asset('favicon.ico') }}" />
    </head>
    <body>
        <div id="headerSite">
            <header>
                {% block headerSite %}
                    <div class="navbar navbar-default navbar-static-top" role="navigation">
                        <div class="container">
                            <div class="navbar-header">
                                <a class="navbar-brand" href="{{ path('accueil') }}">
                                    Benedictux
                                </a>
                            </div>
                        </div>
                    </div>
                {% endblock %}
            </header>
        </div>

        <div id="contentSite">
            <section>
                {% block bodySite %}
                {% endblock %}
            </section>
        </div>

        <div id="footerSite">
            <footer>
                {% block footerSite %}
                {% endblock %}
            </footer>
        </div>
        {% block javascripts %}{% endblock %}
    </body>
</html>
